@model IEnumerable<ArticleViewModel>
<!-- post of the page -->
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <article class="post wow fadeInLeft" data-wow-delay="0.6s">
            <div class="img-holder">
                <a href="@item.FriendLyUrl">
                    <img src="@item.Thumb" alt="@item.Title">
                </a>
            </div>
            <div class="text-wrap">
                <time>@item.DatePublishConvert - <a href="#">Thủ Thuật</a></time>
                <h2>
                    <a href="@item.FriendLyUrl">@item.Title</a>
                </h2>
                <p>
                    @item.Description
                </p>
                <a href="@item.FriendLyUrl" class="link-more">Đọc thêm</a>
            </div>
        </article>
    }
}
<!-- post of the page end -->